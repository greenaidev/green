{
  "functions": {
    "pages/api/**/*.ts": {
      "maxDuration": 300
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ],
  "crons": [{
    "path": "/api/cron/cleanup",
    "schedule": "0 */12 * * *"
  }]
} 